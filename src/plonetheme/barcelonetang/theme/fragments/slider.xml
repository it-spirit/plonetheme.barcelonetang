<model xmlns:form="http://namespaces.plone.org/supermodel/form" xmlns:i18n="http://xml.zope.org/namespaces/i18n" xmlns:lingua="http://namespaces.plone.org/supermodel/lingua" xmlns:marshal="http://namespaces.plone.org/supermodel/marshal" xmlns:security="http://namespaces.plone.org/supermodel/security" xmlns:users="http://namespaces.plone.org/supermodel/users" xmlns="http://namespaces.plone.org/supermodel/schema">
  <schema>
    <field name="images" type="zope.schema.Choice">
      <description>Select the folder containing some images for this slider.</description>
      <title>Images</title>
      <vocabulary>plone.app.vocabularies.Catalog</vocabulary>
      <form:widget type="plone.app.z3cform.widget.RelatedItemsFieldWidget"/>
    </field>
    <field name="slideshow_speed" type="zope.schema.Int">
      <default>7000</default>
      <description>Cycle speed in milliseconds.</description>
      <min>1</min>
      <title>Slideshow Speed</title>
    </field>
    <field name="animation_speed" type="zope.schema.Int">
      <default>600</default>
      <description>Animation speed in milliseconds.</description>
      <min>1</min>
      <title>Animation Speed</title>
    </field>
    <field name="autostart" type="zope.schema.Bool">
      <default>True</default>
      <description>Should the slider start automatically?</description>
      <required>False</required>
      <title>Autostart</title>
      <form:widget type="z3c.form.browser.radio.RadioFieldWidget"/>
    </field>
    <field name="pager" type="zope.schema.Bool">
      <default>True</default>
      <description>Show the pager?</description>
      <required>False</required>
      <title>Show Pager</title>
      <form:widget type="z3c.form.browser.radio.RadioFieldWidget"/>
    </field>
    <field name="navigation" type="zope.schema.Bool">
      <default>True</default>
      <description>Show the navigation?</description>
      <required>False</required>
      <title>Show Navigation</title>
      <form:widget type="z3c.form.browser.radio.RadioFieldWidget"/>
    </field>
    <field name="namespace" type="zope.schema.Choice">
      <default>centered-btns</default>
      <description>Select one of the default themes.</description>
      <title>Theme</title>
      <values>
        <element>centered-btns</element>
        <element>transparent-btns</element>
        <element>large-btns</element>
      </values>
    </field>
    <field name="show_captions" type="zope.schema.Bool">
      <default>False</default>
      <description>Show captions for slides? It will use an image's description.</description>
      <required>False</required>
      <title>Show Captions</title>
      <form:widget type="z3c.form.browser.radio.RadioFieldWidget"/>
    </field>
    <field name="show_fullscreen" type="zope.schema.Bool">
      <default>False</default>
      <description>Show this slider on top of the page?</description>
      <required>False</required>
      <title>Show Fullscreen</title>
      <form:widget type="z3c.form.browser.radio.RadioFieldWidget"/>
    </field>
    <field name="image_scale" type="zope.schema.Choice">
      <default>large</default>
      <description/>
      <title>Image Scale</title>
      <vocabulary>plone.app.vocabularies.ImagesScales</vocabulary>
    </field>
  </schema>
</model>
